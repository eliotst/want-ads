<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-image empty">
                <span class="card-title">
                  <%= @interest.role.title %> - <%= @interest.person.full_name %>
                </span>
                <%= form_for @interest, method: :delete do |form| %>
                    <%= form.hidden_field :id, value: @interest.id %>
                    <button class="btn-floating horizontal waves-effect waves-light red" type="submit">
                        <i class="material-icons">cancel</i>
                    </button>
                <% end %>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col s12">
                        <%= render 'conversation', conversation: @interest.conversation %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
