<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-image empty">
                <span class="card-title">
                  <%= @interest.role.title %> - <%= @interest.person.full_name %>
                </span>
            </div>
            <div class="card-action">
                <% if current_person == @interest.person %>
                    <%= button_to "I am No Longer Interested", interest_path(@interest), method: :delete, class: "btn" %>
                <% elsif current_person == @interest.role.project.person %>
                    <%= button_to "Assign", assign_interest_path(@interest), method: :post, class: "btn" %>
                <% end %>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col s12">
                        <%= render 'conversation', conversation: @interest.conversation %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
