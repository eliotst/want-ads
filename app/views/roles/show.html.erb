<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    <%= @role.title %>
                </span>
                <div class="row">
                    <div class="col s12">
                        <p>
                            <strong>Project:</strong>
                            <%= link_to @role.project.title, @role.project %>
                        </p>
                        <p>
                            <strong>Volunteer:</strong>
                            <%= @role.try(:person).try(:full_name) || "No One" %>
                        </p>
                        <p>
                            <strong>Description:</strong>
                            <%= @role.description %>
                        </p>
                        <% if @role.person == nil %>
                            <%= render 'role_interest' %>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="card-action">
                <% if @role.person != nil %>
                    <%= link_to "Unassign", unassign_role_path(@role), method: :patch %>
                <% end %>
                <a href="<%= new_interest_path(:role_id => @role.id) %>">
                    Interested?
                </a>
                <a href="<%= edit_role_path(@role) %>" class="btn-floating halfway-fab waves-effect waves-light red">
                    <i class="material-icons">edit</i>
                </a>
            </div>
        </div>
    </div>
</div>
