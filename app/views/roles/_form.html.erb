<div class="row">
    <div class="col s12">
        <div class="card">
            <%= form_for @role do |form| %>
                <div class="card-content">
                    <span class="card-title">Create a Role</span>
                    <div class="row">
                        <% if @role.errors.any? %>
                            <div id="error_explanation">
                                <h2>
                                    <%= pluralize(@role.errors.count, "error") %> errors:
                                </h2>
                                <ul>
                                    <% @role.errors.full_messages.each do |msg| %>
                                        <li><%= msg %></li>
                                    <% end %>
                                </ul>
                            </div>
                        <% end %>
                        <div class="input-field col s12">
                            <%= form.label :title %>
                            <%= form.text_field :title %>
                        </div>
                        <div class="input-field col s12">
                            <%= form.label :description %>
                            <%= form.text_area :description, :class => "materialize-textarea" %>
                        </div>
                        <div class="input-field col s12">
                            <%= form.select(:role_type, Role.role_types.keys.to_a) %>
                            <%= form.label :role_type %>
                        </div>
                    </div>
                    <div class="center">
                        <button class="waves-effect waves-teal btn" type="submit">Save</button>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

