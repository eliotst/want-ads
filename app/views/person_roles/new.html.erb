<div class="row">
  <div class="col s12">
    <div class="card">
      <%= form_for @person_role do |form| %>
        <div class="card-content">
          <span class="card-title"><%= @person_role.role.title %></span>
          <div class="row">
            <div class="input-field col s12">
                <%= form.select :person_id, @people.collect {|person| [ person.full_name, person.id ]} %>
                <%= form.label :person %>
            </div>
          </div>
          <div class="center">
              <%= form.hidden_field :role_id, value: @person_role.role.id %>
              <button class="waves-effect waves-teal btn" type="submit">Save</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
