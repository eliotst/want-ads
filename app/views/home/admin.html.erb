<div class="row">
    <div class="card">
        <div class="card-image empty">
            <span class="card-title">All Projects</span>
            <a href="<%= new_project_path %>" class="btn-floating halfway-fab waves-effect waves-light red">
              <i class="material-icons">add</i>
            </a>
        </div>
        <div class="card-content">
            <table class="centered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>State</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if @projects.length > 0 %>
                        <% @projects.each do |project| %>
                            <tr onclick="">
                                <td><%= project.title %></td>
                                <td><%= project.state %></td>
                                <td>
                                    <%= link_to 'Show', project_path(project), :class => "btn" %>
                                </td>
                            </tr>
                        <% end %>
                    <% else %>
                        <tr>
                            <td colspan=3>There are no projects</td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
