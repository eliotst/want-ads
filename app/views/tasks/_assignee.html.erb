<div class="card">
  <div class="card-content">
    <span class="card-title">Assignee</span>
    <div>
        <strong>Role:</strong>
        <%= @task.role.try(:title) or "None" %>
    </div>
    <div>
        <strong>Assigned To:</strong>
        <%= @task.person.try(:full_name) or 'No One' %>
    </div>
  </div>
  <div class="card-action">
    <% if @task.is_eligible?(current_person) %>
        <%= button_to "Assign to Me", volunteer_task_path(@task), class: "btn" %>
    <% end %>
    <% if @task.is_assignee?(current_person) or (@task.person != nil and @task.has_permission?(current_person)) %>
        <%= button_to "Unassign", unassign_task_path(@task), class: "btn" %>
    <% end %>
  </div>
</div>
