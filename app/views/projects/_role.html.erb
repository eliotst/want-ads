<div class="col s4">
    <div class="card">
        <div class="card-content">
            <span class="card-title">
                <%= role.title %>
            </span>
            <p>
                <strong>Description:</strong>
                <%= role.description %>
            </p>
            <% if role.person != nil %>
                <p>
                    <strong>Volunteer:</strong>
                    <%= role.person.full_name %>
                </p>
            <% else %>
                <%= render 'role_interest', role: role %>
            <% end %>
        </div>
        <div class="card-action">
            <a href="<%= role_path(role) %>">
                Show
            </a>
            <% if role.person == nil %>
                <a href="<%= new_interest_path(:role_id => role.id) %>">
                    Interested?
                </a>
            <% end %>
            <a href="<%= edit_role_path(role) %>" class="btn-floating halfway-fab waves-effect waves-light red">
                <i class="material-icons">edit</i>
            </a>
        </div>
    </div>
</div>
