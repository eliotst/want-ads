<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-image empty">
                <span class="card-title">
                    <%= @project.title %>
                </span>
                <a href="<%= edit_project_path(@project) %>" class="btn-floating halfway-fab waves-effect waves-light red">
                    <i class="material-icons">edit</i>
                </a>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col s12">
                        <%= render 'details', project: @project %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <% @project.roles.each do |role| %>
        <%= render "role", :role => role %>
    <% end %>
</div>
