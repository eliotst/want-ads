<div class="row">
    <h2>Projects</h2>
    <div class="card">
        <div class="card-content">
            <table class="bordered centered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>State</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @projects.each do |project| %>
                        <tr onclick="">
                            <td><%= project.title %></td>
                            <td><%= project.state %></td>
                            <td>
                                <%= link_to 'Show', project_path(project), :class => "btn" %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <a href="<%= new_project_path %>" class="btn-floating halfway-fab waves-effect waves-light red">
                <i class="material-icons">add</i>
            </a>
        </div>
    </div>
</div>
