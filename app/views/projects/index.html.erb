<div class="row">
    <div class="card">
        <div class="card-image empty">
            <span class="card-title">Projects</span>
            <% if can_create_projects? %>
                <a href="<%= new_project_path %>" class="btn-floating halfway-fab waves-effect waves-light red">
                    <i class="material-icons">add</i>
                </a>
            <% end %>
        </div>
        <div class="card-content">
            <table class="centered bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>State</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @projects.each do |project| %>
                        <tr onclick="">
                            <td><%= project.title %></td>
                            <td><%= project.state %></td>
                            <td>
                                <%= link_to 'Show', project_path(project), :class => "btn" %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
