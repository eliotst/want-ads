<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Verify Your Email Address</span>
        <div class="row">
          <p class="center">
            Enter your information below, and you will be sent a verification email.
          </p>
          <p class="center">
            Follow the instructions in the email to login.
          </p>
        </div>
        <div class="row">
          <%= form_for @verification_token.person, url: verification_tokens_path do |form| %>
            <div class="input-field col s12">
              <%= form.label :first_name %>
              <%= form.text_field :first_name %>
            </div>
            <div class="input-field col s12">
              <%= form.label :last_name %>
              <%= form.text_field :last_name %>
            </div>
            <div class="input-field col s12">
              <%= form.label :email %>
              <%= form.text_field :email %>
            </div>
            <div class="center">
              <button class="waves-effect waves-teal btn" type="submit">Submit</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
