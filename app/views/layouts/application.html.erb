<!DOCTYPE html>
<html>
  <head>
    <title>Classifieds</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="grey lighten-4">
    <% if current_person != nil %>
      <ul id="dropdown1" class="dropdown-content">
        <% if current_person.admin? %>
          <li>
            <%= link_to "Manage People", people_path %>
          </li>
          <li>
            <%= link_to "All Projects", projects_path(all: 1) %>
          </li>
        <% end %>
        <li>
          <%= link_to "My Projects", projects_path(mine: 1) %>
        </li>
        <li>
          <%= link_to "My Roles", roles_path(mine: 1) %>
        </li>
        <li>
          <%= link_to "My Tasks", tasks_path(mine: 1) %>
        </li>
        <li>
          <%= link_to "Logout", logout_path %>
        </li>
      </ul>
    <% end %>
    <nav class="blue darken-3">
      <div class="nav-wrapper container">
        <a class="brand-logo" href="/">Want Ads</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><%= link_to "Volunteer Opportunities", :roles %></li>
          <li><%= link_to "Projects Underway", :projects %></li>
          <% if current_person != nil %>
            <li>
              <a class="dropdown-button" href="#!" data-activates="dropdown1">
                <%= current_person.email %><i class="material-icons right">arrow_drop_down</i>
              </a>
            </li>
          <% else %>
            <li><%= link_to "Login", login_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
    <%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
    <script language="javascript">
      <% flash.each do |name, msg| %>
        Materialize.toast('<%= msg %>', 4000);
      <% end %>
    </script>
  </body>
</html>
