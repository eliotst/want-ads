<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-image empty">
                <span class="card-title">
                    <%= @person.full_name %>
                </span>
                <a href="<%= edit_person_path(@person) %>" class="btn-floating halfway-fab waves-effect waves-light red">
                    <i class="material-icons">edit</i>
                </a>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col s12">
                        <%= render 'details', person: @person %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
